.mobile-cont
	display none
	text-align right
	
	@media screen and (max-width $grid-float-breakpoint-max)
		display block
		z-index -1
		opacity 0
		
		fixed top 0 right 0
		padding-top 80px
		background-color $menu-bg-color
		height 100%
		width $menu-width
		overflow-y auto
		transform translateX($menu-width) 
		transition all 300ms 
		
		&_shown
			opacity 1
			z-index $zindex-mobile-menu
			transform translateX(0)
			

	&__close
		absolute top 15px right 20px
		width 40px 
		height 40px
		cursor pointer
		
		span
			opacity 1
			display block
			width 3px
			height 0px
			absolute left 50% top 20px
			background-color #B0CB2E 
			transform rotate(0deg) translateX(-50%)
			transform-origin center center
			transition height 200ms 200ms ease-in-out, top 200ms 200ms ease-in-out, transform 200ms 500ms ease-in-out
			
			
			^[0]_shown &
				height 40px
				top 0 
				
			^[0]_shown &:nth-child(1)
				transform rotate(45deg)
			^[0]_shown &:nth-child(2)
				transform rotate(-45deg)
				
			^[0]_hidden &
				transition all 0ms