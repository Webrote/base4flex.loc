.header-fp
	position relative
	display flex
	align-items center
	justify-content flex-start
	padding .5rem 1rem
	z-index $zindex-header-fp
	
	+media-breakpoint-up(md)
		padding 0
	
	&__logo
		
		+media-breakpoint-up(md)
			fixed left 120px top 30px
			z-index $zindex-logo-fp


	&__burger
		fixed top 8px right 16px
		z-index $zindex-burger  
		

	&__menu-wrap
		fixed top 100% left 0
		z-index $zindex-header-menu-wrap-f
		width 100% 
		max-height 100% 
		overflow auto
		padding 50px 30px
		transition 300ms
		opacity 0
		visibility hidden
		box-shadow 0 1px 5px rgba(0, 0, 0, 0.15), 0 0 5px rgba(0, 0, 0, 0.2)
		
		+media-breakpoint-up(md)
			display block
			position static
			box-shadow none
			padding 0
			top 0
			opacity 1
			visibility visible