.form
	&__inline
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items center
		margin-right -5px
		margin-left -5px
		
	&__group
		width 100% 
		margin-bottom 15px
		
		^[0]__inline &
			flex-basis 0
			flex-grow 1
			max-width 100%
			padding-right 5px
			padding-left 5px

	
	&__block
		position relative
		margin-bottom 30px
		
	&__control
		width 100% 
		height 35px
		padding .375rem .75rem
		color #495057 
		border 1px solid #ced4da
		border-radius 3px
		background-color #fff
		background-clip padding-box
		font-size 1rem 
		line-height 1.5
		input-placeholder(color,#a7a7a7)
		
		textarea&
			max-width 100% 
			min-width 100% 
			max-height 110px
			min-height 35px
	
	&__label
		color #2B365F 
		font-weight bold 
		font-size 12px
		padding-left 20px
		
	&__anti
		overflow hidden
		padding 0
		img
			display block
			max-width 100% 
			height auto
			
	& button
	& input[type="submit"]
	& input[type="reset"]
		font-family inherit
		font-size 18px
		font-weight 500 
		color #111 
		cursor pointer