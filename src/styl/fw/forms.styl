.form
	&__inline
		display table
		width 100% 
		margin-bottom 15px
		
	&__group
		width 100% 
		margin-bottom 15px
		
		^[0]__inline &
			display table-cell
			vertical-align middle
			padding-right 10px
			width auto 
			
			&:last-child
				padding-right 0
	
	&__block
		position relative
		margin-bottom 30px
		
	&__control
		width 100% 
		height 35px
		padding 0
		border-bottom 1px solid #bbbbbb
		border-radius 3px
		background-color transparent
		font-family SourceSansPro
		font-size 16px 
		input-placeholder(color,#a7a7a7)
		
		textarea&
			max-width 100% 
			min-width 100% 
			max-height 110px
			min-height 35px
	
	&__label
		color #2B365F 
		font-weight bold 
		font-size 12px
		padding-left 20px
	&__anti
		overflow hidden
		padding 0
		img
			display block
			max-width 100% 
			height auto
			
	& button
		font-family SourceSansPro
		font-size 18px
		font-weight 500 
		color #C00000 