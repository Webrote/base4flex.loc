.form
	&__inline
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items center
		margin-right -($form-inline-indent)
		margin-left -($form-inline-indent)
		
	&__group
		width 100% 
		margin-bottom 15px
		
		^[0]__inline &
			flex-basis 0
			flex-grow 1
			max-width 100%
			padding-right $form-inline-indent 
			padding-left $form-inline-indent 

	&__select
		position relative
		
	&__block
		position relative
		margin-bottom 30px
		
	&__control
		display block
		width 100% 
		height $form-control-height
		padding .375rem .75rem
		color $form-control-color
		border $form-control-border-width solid $form-control-border-color 
		border-radius $form-control-border-radius
		background-color $form-control-bg
		background-clip padding-box
		font-size $font-size-base
		line-height 1.5
		box-shadow $form-control-box-shadow
		transit(,200ms)
		input-placeholder(color,$form-control-placeholder-color)
		
		// Unstyle the caret on `<select>`s in IE10+.
		&::-ms-expand
			background-color transparent
			border 0
			
		// Customize the `:focus` state to imitate native WebKit styles.
		form-control-focus()
		
		&:disabled
			border-color $form-control-disabled-border-color
			background-color $form-control-disabled-bg
			// iOS fix for unreadable disabled content; see https://github.com/twbs/bootstrap/issues/11655.
			opacity 1
			
		textarea&
			max-width 100% 
			min-width 100% 
			max-height 130px
			min-height $form-control-height
			height 90px
			
		select&
			&:not([size]):not([multiple]) 
				height $form-control-height
				
			&:focus::-ms-value
				color $form-control-color
				background-color $form-control-bg
		
		&-file
		&-range
			display block
			width 100% 		

	
	&__label
		color #2B365F 
		font-weight bold 
		font-size 12px
		padding-left 20px
		
	&__anti
		overflow hidden
		padding 0
		img
			display block
			max-width 100% 
			height auto
			
	& button
	& input[type="submit"]
	& input[type="reset"]
		font-family inherit
		font-size 18px
		font-weight 500 
		color #111 
		cursor pointer