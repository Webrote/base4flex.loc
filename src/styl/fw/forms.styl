.form
	&__inline
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items center
		margin-right -($form-inline-indent)
		margin-left -($form-inline-indent)
		
	&__group
		width 100% 
		margin-bottom 15px
		
		^[0]__inline &
			flex-basis 0
			flex-grow 1
			max-width 100%
			padding-right $form-inline-indent 
			padding-left $form-inline-indent 

	&__select
		position relative
		
	&__block
		position relative
		margin-bottom 30px
		
	&__control
		width 100% 
		height $form-control-height
		padding .375rem .75rem
		color #495057 
		border-style solid 
		border-width $form-control-border-width 
		border-color $form-control-border-color 
		border-radius 3px
		background-color #fff
		background-clip padding-box
		font-size 1rem 
		line-height 1.5
		input-placeholder(color,#a7a7a7)
		
		textarea&
			max-width 100% 
			min-width 100% 
			max-height 130px
			min-height $form-control-height
			height 90px
	
	&__label
		color #2B365F 
		font-weight bold 
		font-size 12px
		padding-left 20px
		
	&__anti
		overflow hidden
		padding 0
		img
			display block
			max-width 100% 
			height auto
			
	& button
	& input[type="submit"]
	& input[type="reset"]
		font-family inherit
		font-size 18px
		font-weight 500 
		color #111 
		cursor pointer