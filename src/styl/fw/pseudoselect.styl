.pseudoselect
	position relative
	display block
	width 100% 
	padding 0 0 0 25px 
	text-align left
	pseudoselect()
	transit(,200ms)
		
	&__placer
		display block
		vertical-align middle
		margin-right 45px
		overflow hidden
		white-space nowrap
		text-overflow ellipsis
		
	
	&__icon
		display block
		absolute top 0 right 0
		width 30px
		height 100% 
		// border-left 1px solid #aaa
		// border-radius 0 4px 4px 0  
		
		&:before
			content "â–¼" 
			font-size 12px
			

	&.active
		border-radius 0
		
			
	&.disabled
		opacity 0.5
		
.drop
	drop()
	
	.form__inline &
		width 'calc(100% - 2 * %s)' %$form-inline-indent
		margin-left $form-inline-indent 
	
	&.dropdown
		top $select-height
		border-top none
		border-radius 0 0 4px 4px 
		
	&.dropup
		bottom $select-height
		border-bottom none
		border-radius 4px 4px 0 0
		
	
	& li
		color $drop-list-color
		cursor pointer
		padding 5px 25px 
		// border-bottom 1px solid rgba(#000,0.1)
		transition background-color 150ms
		
		&.active
		&:hover
			background $drop-list-hover-bg
			color $drop-list-hover-color 