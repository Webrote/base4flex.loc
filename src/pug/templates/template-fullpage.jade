include ../var/variables.jade
include ../mixins/mixins.jade

block variables
	- var page_heading_titile // заголовок страницы
	- var breadcrumb_chain // Массив с хлебными крошками
	- var body_class
	
doctype html
html(class="")
	head(lang="ru")
		meta(name="robots", content="noindex, nofollow")
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", id="viewport", content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=yes")
		block title
			title Title
		<!--[if lt IE 9]>
		<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
		

		block links
			link(rel="stylesheet", href="libraries/fullpage/jquery.fullpage.min.css")
			link(href="css/main.css", rel="stylesheet")

		block pixel-glass-templates
			
	body(class= (body_class))
			
		//- +menu-toggle()
		//- Header
		+fp-header()

		//- Block Wrapper, to wrapp main content
		//- such as 'sidebar', 'content'
		block wrapper

		
		//- +footer()
			
		//- +menu-mobile()
		 
		
		block bottom-scripts
			script(type="text/javascript", src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js")
			script(type="text/javascript", src="libraries/fullpage/jquery.fullpage.min.js")
			script(type="text/javascript", src="js/scripts.js")
			script(type="text/javascript", src="js/main.js")