.container
	form.form

		.form__inline
			.form__group
				label Name
				input.form__control(type="text", placeholder="Name")

			.form__group
				label Surname
				input.form__control(type="text", placeholder="Surname")
	

		.form__inline
			.form__group
				label Phone
				input.form__control(type="text", placeholder="Phone")

			.form__group
				label E-mail
				input.form__control(type="text", placeholder="E-mail")

			.form__group
				label E-mail
				input.form__control(type="text", placeholder="E-mail")

		.form__group
			label Message
			textarea.form__control(name="", placeholder="Message..")
		
		
		.form__inline
			.form__group.form__select
				a(href="" class="pseudoselect js-pseudoselect") 
					span.pseudoselect__placer Select Options-1
					span.pseudoselect__icon.i-triangle-down
				ul.drop.js-drop
					li(data-id="0") Option 1
					li(data-id="1") Option 2
					li.active(data-id="2") Option 3
					li(data-id="3") Option 4
					li(data-id="4") Option 5
					li(data-id="5") Option 6
				input(type="hidden", name="select-1", id="select-1")

			.form__group.form__select
				a(href="" class="pseudoselect js-pseudoselect disabled") 
					span.pseudoselect__placer Select Options-2
					span.pseudoselect__icon
				ul.drop.js-drop
					li(data-id="0") Option 1
					li(data-id="1") Option 2
					li.active(data-id="2") Option 3
					li(data-id="3") Option 4
					li(data-id="4") Option 5
					li(data-id="5") Option 6
				input(type="hidden", name="select-2", id="select-2")

		.form__group.pseudoradio
			input(type="radio",id="radio-1",name="radio", value="0",checked,hidden)
			label(for="radio-1") Radio 1

		.form__group.pseudoradio
			input(type="radio",id="radio-2",name="radio", value="1",hidden)
			label(for="radio-2") Radio 2

		.form__group.pseudoradio.disabled
			input(type="radio",id="radio-3",name="radio", value="1", disabled,hidden)
			label(for="radio-3") Radio 3

		.form__group.pseudocheckbox
			input(type="checkbox",id="checkbox-1",name="checkbox-1", value="" hidden)
			label(for="checkbox-1") Check-box-1

		.form__group.pseudocheckbox
			input(type="checkbox",id="checkbox-2",name="checkbox-2", value="" hidden)
			label(for="checkbox-2") Check-box-2

		.form__group.pseudocheckbox.disabled
			input(type="checkbox",id="checkbox-3",name="checkbox-3", value="", disabled, hidden)
			label(for="checkbox-3") Check-box-3

		


		button Submit
		input(type="reset" value="Reset")


.container
	+pagination()
		